{
  "info": {
    "name": "Zemenay Hackathon API Tests",
    "description": "Comprehensive test collection for all API routes",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "test-user-123",
      "type": "string"
    },
    {
      "key": "conversationId",
      "value": "",
      "type": "string"
    },
    {
      "key": "postId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Chat APIs",
      "item": [
        {
          "name": "Start Conversation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"{{userId}}\",\n  \"title\": \"Test Conversation\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/chat/start",
              "host": ["{{baseUrl}}"],
              "path": ["api", "chat", "start"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('conversationId', response.conversationId);",
                  "    console.log('Conversation ID set:', response.conversationId);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Send Message (No Conversation)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"prompt\": \"Hello, what is 2+2?\",\n  \"userId\": \"{{userId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/chat",
              "host": ["{{baseUrl}}"],
              "path": ["api", "chat"]
            }
          }
        },
        {
          "name": "Send Message (With Conversation)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"prompt\": \"What is the capital of France?\",\n  \"userId\": \"{{userId}}\",\n  \"conversationId\": \"{{conversationId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/chat",
              "host": ["{{baseUrl}}"],
              "path": ["api", "chat"]
            }
          }
        },
        {
          "name": "Get Conversation Messages",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/chat/{{conversationId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "chat", "{{conversationId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Blog APIs",
      "item": [
        {
          "name": "Get Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/blog/categories",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blog", "categories"]
            }
          }
        },
        {
          "name": "Create Category",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Category\",\n  \"description\": \"A test category for API testing\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/blog/categories",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blog", "categories"]
            }
          }
        },
        {
          "name": "Get Posts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/blog",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blog"]
            }
          }
        },
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Test Blog Post\",\n  \"content\": \"This is a test blog post for API testing.\",\n  \"author\": \"{{userId}}\",\n  \"categories\": [\"Test Category\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/blog",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blog"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('postId', response.id);",
                  "    console.log('Post ID set:', response.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Specific Post",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/blog/{{postId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blog", "{{postId}}"]
            }
          }
        },
        {
          "name": "Update Post",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Test Blog Post\",\n  \"content\": \"This is an updated test blog post.\",\n  \"categories\": [\"Test Category\", \"Updated Category\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/blog/{{postId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blog", "{{postId}}"]
            }
          }
        },
        {
          "name": "Get Comments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/blog/comments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blog", "comments"]
            }
          }
        },
        {
          "name": "Create Comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"post_id\": \"{{postId}}\",\n  \"author\": \"{{userId}}\",\n  \"content\": \"This is a test comment for API testing.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/blog/comments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blog", "comments"]
            }
          }
        }
      ]
    },
